<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="690.0" prefWidth="915.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.loleq2105.bookingmgmtapp.controller.RoomsController">
   <children>
      <VBox>
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="718.0">
               <children>
                  <TableView fx:id="roomTable" prefHeight="400.0" prefWidth="382.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="numberColumn" prefWidth="75.0" text="Numer" />
                        <TableColumn fx:id="capacityColumn" prefWidth="75.0" text="Pojemność" />
                        <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Typ" />
                        <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Cena" />
                     </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddRoom" text="Dodaj nowy pokój" />
                  <Button mnemonicParsing="false" onAction="#onRemove" text="Usuń" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
